<%= simple_form_for(@page) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :meta_title %>
    <%= f.input :meta_description %>
    <%= f.input :page_title %>
    <%= f.input :header_image %>
    <%= f.input :body %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
