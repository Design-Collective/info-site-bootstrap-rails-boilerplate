<%= simple_form_for @page do |f| %>
  <%= f.error_notification %>
    <%= f.input :meta_title %>
    <%= f.input :meta_description %>
    <%= f.input :page_title %>
    <%= f.input :header_image %>
    <%= f.input :body, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'} } %>
    <%= f.button :submit %>
<% end %>
