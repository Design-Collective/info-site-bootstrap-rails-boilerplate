<h1>Listing pages</h1>
<%= link_to 'Create Page', new_page_path %>

<section>
  <% @pages.each do |page| %>
  <article>
    <h2><%= page.title %></h2>
    <div><%= page.header_image %></div>
    <div><%= truncate(page.body, length: 300, escape: false) %></div>
    <%= link_to 'Show', page %>
    <%= link_to 'Edit', edit_page_path(page) %>
    <%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %>
  </article>
  <% end %>
</section>

